<% if current_user.profile %>

  <div class="max-w-sm rounded overflow-hidden shadow-lg">
    <% if  @profile.avatar.attached? %>
      <%= image_tag @profile.avatar, class:"w-full" %>
    <% else %>
      <%= image_tag src="user.png" %>
    <% end %>
    <div class="px-6 py-4">
      <div class="font-bold text-xl mb-2"><%= @profile.nickname %></div>
        <p class="text-gray-700 text-base">
          <%= @profile.full_name %><br>
          <% if @profile.date_of_birth? %>
            <%= @profile.date_of_birth %>
          <% end %>
        </p>
      </div>
      <div class="px-6 py-4">
        <%= link_to t('profile.edit'), edit_profile_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    </div>
  </div>

<% else %>

  <%= link_to t('profile.create'), new_profile_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>

<% end %>
