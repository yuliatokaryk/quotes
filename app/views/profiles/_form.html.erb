<% if @profile.errors.any? %>
  <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
    <ul class="list-disc">
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="w-full max-w-xs">
    <%= form_with(model: @profile, url: profile_path, local:true) do |f| %>
      <div class="mb-4">
        <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :first_name, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
      </div>
      <div class="mb-4">
        <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :last_name, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
      </div>
      <div class="mb-4">
        <%= f.label :nickname, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.text_field :nickname, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
      </div>
      <div class="mb-4">
        <%= f.label :date_of_birth, class: "block text-gray-700 text-sm font-bold mb-2" %>
        <%= f.date_field :date_of_birth, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
      </div>
      <div class="mb-4">
        <%= f.label t('profile.avatar') %>
        <%= f.file_field :avatar %>
      </div>
      <div class="mb-4">      
        <%= f.submit t('actions.submit'), class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
      </div>
    <% end %>
</div>
