<div class="flex justify-center">
  <div class="block p-6 rounded-lg shadow-lg bg-white w-6/12 my-3">
    <% if quote.source_type == "Book" %>
      <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">
        <%= quote.source.title %>
      </h5>
    <% elsif quote.source_type == "Author" %>
      <h5 class="text-gray-900 text-xl leading-tight font-medium mb-2">
        <%= quote.source.full_name %>
      </h5>
    <% end %>
    <p class="text-gray-700 text-base mb-4">
      <%= quote.content %>
    </p>
    <% if quote.state == 'approved' %>
      <p class="text-gray-500 text-base mb-4">
        <%= quote.likes.count %> like(s)
      </p>
      <% if user_signed_in? %>
        <% if quote.liked_by?(current_user)  %>
          <%= button_to likes_path(quote_id: quote.id, page: params['page']), method: :delete do %>
            <i class="fa-solid fa-heart text-pink-600 text-xl"></i>
          <% end %>
        <% else %>
          <%= button_to likes_path(quote_id: quote.id, page: params['page']) do %> 
            <i class="fa-regular fa-heart text-pink-600 text-xl"></i>
          <% end %>
        <% end %>
      <% end %>
    <% else %>
      <p class="text-red-700 text-base mb-4">
        <%= t('.pending_quote') %>
      </p>
    <% end %>
    <% if policy(quote).update? %>
      <%= link_to t('.edit_quote'), edit_quote_path(quote), class: "inline-block px-6 py-2.5 bg-yellow-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" %>
      <%= link_to t('.delete_quote'), quote_path(quote), method: :delete, data: { confirm: "Are you sure?" }, class: "inline-block px-6 py-2.5 bg-red-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out"%>
    <% end %>
  </div>
</div>
