<% if @books.any? %>
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="min-w-full border text-center">
            <thead class="border-b">
              <tr>
                <th class="text-sm font-medium text-gray-900 px-6 py-4 border-r">
                  <%= Book.human_attribute_name(:title) %>
                </th>
                <th class="text-sm font-medium text-gray-900 px-6 py-4 border-r">
                  <%= Book.human_attribute_name(:year_of_publication) %>
                </th>
                <th class="text-sm font-medium text-gray-900 px-6 py-4 border-r">
                  <%= Book.human_attribute_name(:wikipedia_url) %>
                </th>
                <th class="text-sm font-medium text-gray-900 px-6 py-4 border-r">
                  <%= Book.human_attribute_name(:goodreads_url) %>
                </th>
                <th class="text-sm font-medium text-gray-900 px-6 py-4 border-r">
                  <%= Book.human_attribute_name(:author_id) %>
                </th>
                <th colspan="3" class="text-sm font-medium text-gray-900 px-6 py-4 border-r">
                  <%= t('.actions') %>
                </th>
              </tr>
              </thead>
              <tbody>
              <% @books.each do |book| %>            
                <tr>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap border-r"><%= book.title %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap border-r"><%= book.year_of_publication %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap border-r"><%= book.wikipedia_url %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap border-r"><%= book.goodreads_url %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap border-r"><%= book.author.full_name %></td>
                  <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap border-r">
                    <%= link_to t('.show_book'), book_path(book), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
                  </td>
                  <% if policy(book).update? %>
                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap border-r">
                      <%= link_to t('.edit_book'), edit_book_path(book), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
                    </td>
                    <td class="text-sm text-gray-900 font-light px-6 py-4 whitespace-nowrap border-r">
                      <%= link_to t('.delete_book'), book_path(book), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"%>
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="flex justify-center my-5">
    <%== pagy_nav(@pagy) %>
  </div>
<% else %>
  <h1 class='text-center my-5 text-4xl'><%= t('.empty') %></h1>
<% end %>

<% if user_signed_in? %>
  <%= link_to t('.add_new_book'), new_book_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
