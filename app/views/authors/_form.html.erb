<% if @author.errors.any? %>
<ul>
  <% @author.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<div class="w-full max-w-xs">
  <%= form_with(model: @author, local:true) do |f| %>
    <div class="mb-4">
      <%= f.label :first_name, class: "block text-gray-700 text-sm font-bold mb-2" %><br>
      <%= f.text_field :first_name, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
    </div>
    <div class="mb-4">
      <%= f.label :last_name, class: "block text-gray-700 text-sm font-bold mb-2" %><br>
      <%= f.text_field :last_name, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
    </div>
    <div class="mb-4">
      <%= f.label :date_of_birth, class: "block text-gray-700 text-sm font-bold mb-2" %><br>
      <%= f.date_field :date_of_birth, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
    </div>
    <div class="mb-4">
      <%= f.label :wikipedia_url, class: "block text-gray-700 text-sm font-bold mb-2" %><br>
      <%= f.text_field :wikipedia_url, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
    </div>
    <div class="mb-4">
      <%= f.label :goodreads_url, class: "block text-gray-700 text-sm font-bold mb-2" %><br>
      <%= f.text_field :goodreads_url, class:"shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %><br>
    </div>
    <div class="mb-4">
      <%= f.submit :submit, class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>
