<% if @author.errors.any? %>
  <div class="p-4 mb-4 text-sm text-red-700 bg-red-100 rounded-lg dark:bg-red-200 dark:text-red-800" role="alert">
    <ul class="list-disc">
      <% @author.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @author, local:true, class: 'mx-auto md:w-2/4 my-14 px-2') do |f| %>
  <div class="text-center">
    <%= image_tag("QS-logo", class: "mx-auto w-40 my-5", alt: "logo") %>
  </div>
  <div class="flex flex-wrap -mx-3 mb-4 mt-6">
    <div class="w-full md:w-1/2 px-3">
      <%= f.label 'first_name', class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.text_field :first_name, class:"sappearance-none block w-full bg-gray-100 text-gray-700 border border-gray-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= f.label 'last_name', class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.text_field :last_name, class:"sappearance-none block w-full bg-gray-100 text-gray-700 border border-gray-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-4 mt-4">
    <div class="w-full md:w-1/2 px-3">
      <%= f.label 'wikipedia_url', class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.text_field :wikipedia_url, class:"appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
    <div class="w-full md:w-1/2 px-3">
      <%= f.label 'goodreads_url', class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.text_field :goodreads_url, class:"appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
  </div>
  <div class="flex flex-wrap -mx-3 mb-4 mt-4">
    <div class="w-full md:w-1/2 px-3">
      <%= f.label 'date_of_birth', class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= f.text_field :date_of_birth, class:"appearance-none block w-full bg-gray-100 text-gray-700 border border-gray-500 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>
  </div>
  <%= f.submit t('.submit'), class: "inline-block px-8 py-4 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:shadow-lg focus:outline-none focus:ring-0 active:shadow-lg transition duration-150 ease-in-out w-1/3 mb-3", 
                            style:"background: linear-gradient(
                                                to right,
                                                #979dac,
                                                #7d8597,
                                                #5c677d,
                                                #33415c,
                                                #001233);" %>
<% end %>